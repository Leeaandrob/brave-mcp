# =============================================================================
# Brave Search MCP Server Configuration
# =============================================================================

# Server Configuration
# Port for the HTTP server (default: 3000)
PORT=3000

# Environment (development, production, test)
NODE_ENV=production

# =============================================================================
# Brave Search API Configuration
# =============================================================================

# Required: Get your API key from https://api.search.brave.com/app/keys
BRAVE_API_KEY=your_brave_api_key_here

# Optional: Brave Search API URL (default: https://api.search.brave.com/res/v1)
# BRAVE_API_URL=https://api.search.brave.com/res/v1

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable/disable caching (default: true)
CACHE_ENABLED=true

# Cache TTL in seconds (default: 300)
CACHE_TTL=300

# Redis URL for caching (optional, falls back to memory cache)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# =============================================================================
# Security Configuration
# =============================================================================

# CORS origin for HTTP endpoints (default: *)
# CORS_ORIGIN=http://localhost:8080

# Rate limiting - requests per minute (default: 100)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Performance Configuration
# =============================================================================

# Maximum query length (default: 500)
MAX_QUERY_LENGTH=500

# Maximum results per request (default: 50)
MAX_RESULTS=50